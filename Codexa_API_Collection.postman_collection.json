  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-add Bearer token to requests that need authentication",
          "const url = pm.request.url.toString();",
          "const needsAuth = !url.includes('/auth/register') && ",
          "                !url.includes('/auth/login') && ",
          "                !url.includes('/health') && ",
          "                !url.includes('/docs') && ",
          "                !url.includes('/redoc') && ",
          "                !url.includes('/courses/published') && ",
          "                !url.includes('/courses/by-category') && ",
          "                !url.includes('/courses/by-instructor') && ",
          "                !url.includes('/jobs/active') && ",
          "                !url.includes('/jobs/recent') && ",
          "                !url.includes('/enquiries/') && ",
          "                url !== pm.environment.get('base_url') + '/';",
          "",
          "if (needsAuth) {",
          "    const token = pm.environment.get('token');",
          "    if (token) {",
          "        pm.request.headers.add({",
          "            key: 'Authorization',",
          "            value: 'Bearer ' + token",
          "        });",
          "        console.log('üîê Auto-added Bearer token to request');",
          "    } else {",
          "        console.log('‚ö†Ô∏è No token found - please login first');",
          "    }",
          "}"
        ]
      }
    }
