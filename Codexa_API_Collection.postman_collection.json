        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"9876543210\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login user and get access token"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Auto-extract bearer token from login response",
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.access_token) {",
                  "        pm.environment.set('token', responseJson.access_token);",
                  "        console.log('‚úÖ Token saved to environment:', responseJson.access_token);",
                  "        ",
                  "        // Also save user info for reference",
                  "        pm.environment.set('user_id', responseJson.user.id);",
                  "        pm.environment.set('user_email', responseJson.user.email);",
                  "        pm.environment.set('user_name', responseJson.user.full_name);",
                  "        pm.environment.set('is_admin', responseJson.user.is_admin);",
                  "        ",
                  "        // If user is admin, also set admin_token",
                  "        if (responseJson.user.is_admin) {",
                  "            pm.environment.set('admin_token', responseJson.access_token);",
                  "            console.log('‚úÖ Admin token also set');",
                  "        }",
                  "    } else {",
                  "        console.log('‚ùå No access_token found in response');",
                  "    }",
                  "} else {",
                  "    console.log('‚ùå Login failed with status:', pm.response.code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        },
